@model SchoolSystem.Models.ViewModels.DirectorPanel.DirectorGradeVm

@{
    ViewBag.Title = "_SubjectPartial";
}

<div class="subject-container">
    <h3 class="text-center">
        @Html.DisplayFor(modelItem => Model.Value)@Html.DisplayFor(modelItem => Model.Class) клас
    </h3>
    <div>
        @Html.ActionLink("Добави предмет", "Add", new { id = Model.Id }, new { @class = "btn btn-sm btn-info add-subject-btn" })
    </div>
    <br />
    <table class="table subjects-table">
        @foreach (var subject in Model.Subjects)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => subject.Name)
                </td>
                <td>
                    @if (subject.Teacher == null)
                {
                        @Html.ActionLink("Добави учител", "AddTeacher", new { id = subject.Id }, new { @class = "btn btn-sm btn-info subjects-btn" })
                    }
                    else
                    {
                        @Html.ActionLink("Промени учителя", "EditTeacher", new { id = subject.Id }, new { @class = "btn btn-sm btn-warning subjects-btn" })
                    }
                    @Html.ActionLink("Премахни предмет", "Remove", new { id = subject.Id }, new { @class = "btn btn-sm btn-danger subjects-btn" })
                </td>
            </tr>
        }
    </table>
</div>