@model SchoolSystem.Models.ViewModels.SchoolDiary.Students.MarksForStudentVm

@{
    ViewBag.Title = "StudentMarks";
}

<h2 class="text-center">@Html.DisplayFor(model => Model.Student.Name)</h2>

@if (User.IsInRole("Teacher"))
{
    @Html.ActionLink("Add Mark", "AddMark", "Teacher", new { id = Model.Student.Id }, new { @class = "btn btn-sm btn-info add-btn" });
}

<br />

<table class="table">

@foreach (var item in Model.Marks) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subject.Name) - @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @if (User.IsInRole("Teacher"))
            {
                @Html.ActionLink("Edit Mark", "EditMark", "Teacher", new { id = item.Id }, new { @class = "btn btn-sm btn-warning" })
            }
        </td>
    </tr>
}

</table>

@Html.ActionLink("Go back", "All", new { id = Model.Student.Grade.Id }, new { @class = "btn btn-sm btn-default go-back-btn" })