@model SchoolSystem.Models.ViewModels.SchoolDiary.Teachers.MarkVm

@{
    ViewBag.Title = "Промени оценката";
}

<h2 class="text-center">Промени оценката</h2>

@using (Html.BeginForm())
{    
    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <div class="col-md-8">
               @Html.TextBoxFor(model => model.StudentId, new { @class = "form-control hidden", Value = Model.StudentId })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.Value, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control", Value = Model.Value } })
                @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SubjectName, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.SubjectName, new { htmlAttributes = new { @class = "form-control", Value = Model.SubjectName } })
                @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div>
                <input type="submit" value="Промени" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "StudentMarks", "Students", new { id = Model.StudentId }, new { @class = "btn btn-sm btn-default go-back-btn" })
</div>
