@model SchoolSystem.Models.ViewModels.SchoolDiary.Teachers.MarkVm

@{
    ViewBag.Title = "Добави оценка";
}

<h2 class="text-center">Добави оценка</h2>

@using (Html.BeginForm("AddMark", "Teacher", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <hr />

    <div class="form-group">
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.StudentId, new { @class = "form-control hidden", Value = Model.StudentId })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Value, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SubjectName, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.SubjectName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div>
            <input type="submit" class="btn btn-success submit-btn" value="Добави"/>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "StudentMarks", "Students", new { id = Model.StudentId }, new { @class = "btn btn-sm btn-default go-back-btn" })
</div>