@model IEnumerable<SchoolSystem.Models.ViewModels.SchoolDiary.Grades.AllGradesVm>

@{
    ViewBag.Title = "Класове";
}

<h2 class="text-center">@ViewBag.Title</h2>

<table class="table">

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Value)@Html.DisplayFor(modelItem => item.Class) клас
        </td>
        <td>
            @Html.ActionLink("Предмети", "All", "Subjects", new { id = item.Id }, new { @class = "btn btn-sm btn-primary all-grades-btn" }) 
            @Html.ActionLink("Ученици", "All", "Students", new { id = item.Id }, new { @class = "btn btn-sm btn-primary all-grades-btn" })
        </td>
    </tr>
}

</table>